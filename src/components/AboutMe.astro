---
import {about} from '../collections/info.json'
import CardAboutMe from './ui/CardAboutMe.astro'
import Abbadon from '../assets/images/abbadon.svg'
import Map from '../assets/images/map-pin.svg'

const {presentation, location} = about
const {title, content} = presentation

---
<section class="py-10 px-8">
    <div class="max-w-6xl mx-auto">
        <h2 class="mb-10 text-2xl text-bright-blue dark:text-dire font-cinzel tablet:text-3xl lg:text-5xl">
            Sobre Mi
        </h2>
        <div class="grid grid-cols-1 tablet:grid-cols-3 gap-4 md:gap-6">
            <CardAboutMe type="presentation" mainContent={title} content={content} icon={Abbadon.src} />
            <CardAboutMe type="extra-info" mainContent={location.place} content={location.content} icon={Map.src} />
        </div>
    </div>
</section>
