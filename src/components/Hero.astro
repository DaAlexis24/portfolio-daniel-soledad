---
import {hero} from '../collections/info.json'
import { socialLinks } from '../config/info';
import Button from './ui/Button.astro';
---

<section class="mt-15">
    <div class="flex flex-col max-w-7xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
        <div class="mr-auto lg:col-span-7 text-center items-center">
            <h1 class="max-w-3xl mb-4 text-4xl font-extrabold text-dark-blue leading-none md:text-5xl xl:text-6xl dark:text-dire font-cinzel">{hero.title}</h1>
            <p class="max-w-2xl mb-6 font-rubik text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-neutral-200">{hero.presentation}</p>
            <div class="inline-flex justify-center items-center mt-4 space-x-5 sm:ml-auto sm:mt-0 sm:justify-start overflow-hidden">
                <Button type='fill'>
                    Cont√°cteme
                </Button>
                {socialLinks.map((social)=> (
                    <a href={social.url} target="_blank" title={social.site}>
                        <div class="icons text-bright-blue dark:text-orange-700">
                            <Fragment set:html={social.icon} />
                        </div>
                    </a>
                ))}
            </div>
        </div>
        <div class="md:mt-0 md:col-span-5 md:flex">
            <img src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png" alt="mockup">
        </div>                
    </div>
</section>

<style>
    .icons{
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .icons svg{
        width: 20px;
        height: 20px;
        fill: currentColor;
    }
</style>