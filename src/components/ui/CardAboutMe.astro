---
export interface Props {
    type?: "presentation" | "extra-info" | "skills-info"; // Multiple type of cards for the same section
    className?: string; // Custom CSS Classes
    mainContent: string;
    content?: string;
    itemList?: [];
}

const {type, className, mainContent, content, itemList} = Astro.props
---
<div class="bg-light-blue border p-6 tablet:p-10 border-radiant rounded-3xl hover:shadow-2xl dark:bg-light-black dark:border-dire transition-all hover:transition-all hover:duration-300 hover:-translate-y-2 hover:ease-in-out">
    {type === "presentation" ? (
        <div class="grid grid-cols-3 grid-rows-2 items-start gap-4">
            <div class="row-span-2 w-20 h-20 flex items-center justify-center rounded-xl bg-linear-to-br from-radiant to-sea-blue dark:from-dire dark:to-gray-700">
                <slot />
            </div>
            <h3 class="col-span-2 font-cinzel text-xl font-bold text-dark-blue dark:text-dire leading-tight">{mainContent}</h3>
            <p class="col-span-2 col-start-2 row-start-2 font-rubik text-sm text-gray-600 dark:text-neutral-300 line-clamp-2">{content}</p>
        </div>
    ):type === "extra-info" ? (
        <div class="flex flex-col gap-8 justify-items-start">
            {/* <div class="w-10 h-10">{icon}</div> */}
            <p class="col-span-2 col-start-2 row-start-2 font-rubik text-sm prose text-gray-500 dark:text-neutral-200">{content}</p>
            <h3 class="col-span-2 font-cinzel text-lg text-dark-blue dark:text-dire">{mainContent}</h3>
        </div>
    ):type === "skills-info" ? (
        <div class="grid grid-cols-3 grid-rows-2 gap-8">
            {/* <div class="w-10 h-10">{icon}</div> */}
            <h3 class="col-span-2 font-cinzel text-lg text-dark-blue dark:text-dire">{mainContent}</h3>
            <div class="flex flex-wrap gap-2 font-roboto">{itemList?.map((item) => {
                return (
                    <span class="px-3 py-1.5 text-sm rounded-lg bg-radiant text-acero hover:bg-sea-blue hover:text-light-blue dark:bg-gray-800 dark:text-red-600 dark:hover:bg-dire dark:hover:text-niebla transition-colors cursor-default">{item}</span>
                )
            })}</div>
        </div>
    ): (
        <div><slot/></div>
    )}
</div>
